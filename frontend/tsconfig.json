{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "jsx": "react-jsx",
    "strict": true,
    "noEmit": true,
    "types": ["vitest/globals"],
    "baseUrl": ".",
    "esModuleInterop": true,
    "paths": {
      "@/*": ["src/*"],
      "@backend/*": ["../backend/src/*"]
    }
  },
  "include": [
    "src",
    "vitest.config.ts"
  ]
}
